
@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
    ViewBag.Title = "DangKy";
}

<style type="text/css">
    tr {
        height: 40px;
    }

    .middle {
        margin: 0 auto;
    }
    table{
        border-collapse: unset;
        border-spacing:unset;
    }
    .bigger{
        height: 100px;
    }
    .bolder{
        font-size: larger;
        font-weight: bolder;
    }
</style>
<h4 style="color:red; text-align:center; margin-top:200px;">@ViewBag.ThongBao</h4>
<h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
<table align="center" class="middle" style="border: 1px solid; border-radius: 20px; padding:10px; margin-top: 120px">
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(true)
        <tr class="bigger">
            <td class="bolder">Họ tên:</td>
            <td>@Html.TextBox("HoTen") @ViewData["err1"]</td>
        </tr>
        <tr class="bigger">
            <td class="bolder">Tên đăng nhập:</td>
            <td>@Html.TextBox("TenDN") @ViewData["err2"]</td>
        </tr>
        <tr class="bigger">
            <td class="bolder">Mật khẩu:</td>
            <td>@Html.Password("MatKhau") @ViewData["err3"]</td>
        </tr>
        <tr class="bigger">
            <td class="bolder">Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr class="bigger">
            <td class="bolder">Email:</td>
            <td>@Html.TextBox("Email") @ViewData["err5"]</td>
        </tr>
        <tr class="bigger">
            <td class="bolder">Điện thoại:</td>
            <td>@Html.TextBox("DienThoai") @ViewData["err6"]</td>
        </tr>
        <tr class="bigger">
            <td class="bolder" >Ngày sinh:</td>
            <td><input type="date" name="NgaySinh" /></td>
        </tr>
        <tr class="bigger">
            <td class="bolder">Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>
        <tr class="bigger">
            <td></td>
            <td><input type="submit" value="Đăng ký" />
            <input type ="reset" value="Xóa Thông Tin" /></td>
        </tr>
    }
</table>
