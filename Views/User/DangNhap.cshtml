<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login - SB Admin</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />

</head>

<div id="layoutAuthentication_content">
    <main>
        <div class="container" style="margin-top: 120px;">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header"><h3 class="text-center font-weight-light my-4">Đăng nhập</h3></div>
                        <div class="card-body">
                            <h4 style="color:red; text-align:center;">@ViewBag.ThongBao</h4>
                            <form action="~/User/DangNhap" method="post">
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputEmail" type="text" name="TenDN" value="@ViewData["TenDN"]" required />
                                    <label for="inputEmail">Tài Khoản</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input class="form-control" id="inputPassword" name="MatKhau" type="password" value="@ViewData["MatKhau"]" required />

                                    <label for="inputPassword">Mật Khẩu</label>
                                </div>
                                <div class="form-check mb-3">
                                    <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                    <label class="form-check-label" for="inputRememberPassword">Nhớ mật khẩu</label>
                                </div>
                                <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a class="small" href="password.html">Quên mật khẩu?</a>
                                    <input type="submit" value="Đăng nhập" />
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center py-3">
                            <div class="small"><a href="@Url.Action("DangKy", "User")">Đăng ký tài khoản mới! Tại Đây</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>





