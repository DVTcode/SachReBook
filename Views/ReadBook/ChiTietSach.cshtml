@model SachOnline.Models.SACH
@{
    ViewBag.Title = "Chi Tiết Sách";
    Layout = "~/Views/Shared/_LayoutNew.cshtml"; // Điều chỉnh nếu bạn dùng layout khác
}

<div style="margin-top: 100px;">
    <h2>@Model.TenSach</h2>

    <div style="display: flex; gap: 20px; margin-top: 20px;">
        <div style="flex: 1;">
            <img src="@Url.Content("~/Image/" + Model.AnhBia)" alt="Ảnh bìa sách" style="max-width: 100%; height: auto;" />
        </div>

        <div style="flex: 2;">
            <p><strong>Tác giả:</strong> @Model.NHAXUATBAN</p>
            <p><strong>Ngày cập nhật:</strong> @Model.NgayCapNhat?.ToString("dd/MM/yyyy")</p>
            <p>
                <strong>Giá:</strong>
                @if (Model.GiaBan.HasValue)
                {
                    @String.Format("{0:N0} VNĐ", Model.GiaBan)
                }
                else
                {
                    <span>Miễn phí</span>
                }
            </p>
            <p><strong>Mô tả:</strong></p>
            <p>@Model.MoTa</p>
        </div>
    </div>
</div>
