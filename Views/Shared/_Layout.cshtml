    <style type="text/css">
        .dangkydangnhap {
            background-color: black;
            width: 300px;
            float: right;
        }

        .cainaymoidung {
            display: flex;
            justify-content: space-around;
            margin: 0;
        }

        #header {
            height: 35px;
            background-color: black;
        }

        .dangky:hover {
            color: red;
        }

        .number {
            color: white;
            text-decoration: none;
            cursor: none;
        }

        .icDienThoai {
            width: 50%;
        }

        div.txtTimKiemall {
            height: 30px;
            float: right;
            margin-right: 30px;
            margin-top: 8px;
            width: 300px;
        }

        .btnlink button:hover {
            background-color: red;
        }

        #navigation {
            position: relative;
        }

        .imgbook {
            width: 100px;
        }

            .imgbook:hover {
                transform: scale(0,9);
                cursor: pointer;
            }

        .imgsachbannhieu {
            width: 100px;
        }

        .list-group {
            display: block;
            width: auto;
        }

        .menu {
            padding-top: 70px;
            width: 330px;
            float: left;
        }

        .tes {
            background-color: red;
        }

        .navbar {
            height: 40px;
            background-image: linear-gradient(0, red, orange);
            margin-bottom: 0px;
        }

        .grid {
            width: 1200px;
            max-width: 100%;
            margin: 0 auto;
            display: flex;
        }

        .khoangcach {
            margin: 0 auto;
            color: black;
            font-weight: 300;
        }

        .header__navbar-item {
            position: relative;
            list-style: none;
        }
    </style>
</head>
<body>
    <div id="header">
        <div class="dangkydangnhap">
            <ul class="cainaymoidung">
                <li class="header__navbar-item">@Html.Action("LoginLogoutPartial", "User")</li>
            </ul>
        </div>
    </div>
    <div id="navigation" style="height: 40px;">
        <div class="txtTimKiemall" style=" margin-right: 30px; margin-top: 8px; width:300px;">
            @using (Html.BeginForm())
            {
                @Html.TextBox("txttimkiem", "", htmlAttributes: new { @style = "height: 30px; width:300px", @placeholder = "Nhập vào từ khóa cần tìm" })
            }
            <a href="" class="header__navbar-list-link">
                <i class="fa-solid fa-magnifying-glass fa-xl" style="display:block; position: absolute; right: 2px;
bottom:17px;"></i>
            </a>
        </div>
        <ul>
            <li class="active"><a class="noibathover" href="/">Trang chủ</a></li>
            <li><a class="noibathover" href="#showcase/commercial_templates/">Liên hệ</a></li>
            <li><a class="noibathover" href="#contact/">Sách</a></li>
            <li class="noibathover">@Html.Action("GioHangPartial", "GioHang")</li>
        </ul>
    </div>
    <div class="menu">
        @Html.Action("ChuDePartial", "SachOnline")
        @Html.Action("NhaXuatBanPartial", "SachOnline")
    </div>
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
        @RenderBody()
    </div>
